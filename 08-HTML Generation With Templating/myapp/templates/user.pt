<html metal:use-macro="load: layout.pt">
<head>
    <title metal:fill-slot="title">User List</title>
</head>
<body>
    <div metal:fill-slot="content">
        <h1>User Management</h1>
        <table style="width: 100%; margin-top: 2rem; border-collapse: collapse;">
            <thead>
                <tr style="background: #f8f9fa; border-bottom: 2px solid #dee2e6;">
                    <th style="padding: 1rem; text-align: left;">ID</th>
                    <th style="padding: 1rem; text-align: left;">Name</th>
                    <th style="padding: 1rem; text-align: left;">Role</th>
                    <th style="padding: 1rem; text-align: left;">Status</th>
                </tr>
            </thead>
            <tbody>
                <tr tal:repeat="user users" style="border-bottom: 1px solid #dee2e6;">
                    <td style="padding: 1rem;">${user['id']}</td>
                    <td style="padding: 1rem;">${user['name']}</td>
                    <td style="padding: 1rem;">${user['role']}</td>
                    <td style="padding: 1rem;">
                        <span tal:condition="user['active']" class="badge badge-success">
                            Active
                        </span>
                        <span tal:condition="not user['active']" class="badge badge-danger">
                            Inactive
                        </span>
                    </td>
                </tr>
            </tbody>
        </table>
        
        <div style="margin-top: 2rem; font-size: 0.875rem; color: #6c757d;">
            Total users: <strong tal:content="len(users)">0</strong>
        </div>
    </div>
</body>
</html>